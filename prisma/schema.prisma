// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  googleId   String?
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  otps       OTP[]
  favoriteMatches  FavoriteMatch[]
  favoriteSeries   FavoriteSeries[]
  pollVotes   PollVote[] // New relation to track user votes
}

model OTP {
  id        Int      @id @default(autoincrement())
  code      String
  email     String
  createdAt DateTime @default(now())
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int

  @@index([email])
}

model FavoriteMatch {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  matchId   Int
  matchData String?
  createdAt DateTime @default(now())

  @@unique([userId, matchId])
}

model FavoriteSeries {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  seriesId  Int
  createdAt DateTime @default(now())

  @@unique([userId, seriesId])
}

model Blog {
  id          String      @id @default(cuid())
  type        String      // "football" or "cricket"
  title       String
  img         String?     // Optional image URL (mainly for cricket blogs)
  paragraphs  Json        // Store paragraphs as JSON
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Poll {
  id          String      @id @default(cuid())
  team1Name   String
  team2Name   String
  startTime   String
  team1Votes  Int         @default(0)
  team2Votes  Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  votes       PollVote[]  // Relation to individual votes
}

model PollVote {
  id        Int       @id @default(autoincrement())
  pollId    String
  poll      Poll      @relation(fields: [pollId], references: [id], onDelete: Cascade)
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  voteChoice Int      // 1 for team1, 2 for team2
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([pollId, userId]) // Ensures one user can vote only once per poll
}